doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    // Chrome, Firefox OS, Opera and Vivaldi
    meta(name='theme-color', content='#0e2344')
    // Windows Phone
    meta(name='msapplication-navbutton-color', content='#0e2344')
    // iOS Safari
    meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
    meta(name='keywords', content='')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    title Marathonbet
    link(rel='shortcut icon', type='image/x-icon', href='img/marathon_favicon.ico')
    style(type='text/css').
      body, html {
        margin: 0;
        padding: 0;
        height: 100%;
      }
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        line-height: normal;
        color: #595959;
        background-color: #ffffff;
      }
      .text-left > p {
        margin: 0;
      }
      #main {
        height: 100%;
        background-color: #0e2344;
      }
      .header-top {
        height: 42px;
        background-color: #0e2344;
        line-height: 40px;
        padding-left: 0;
      }
      .header-top .logo img {
        height: 42px;
        vertical-align: middle;
      }
      .box-in-progress {
        text-align: center;
        color: #0e2344;
        font-weight: 500;
        background-color: #f9f9fd;
        padding: 0 5% 5% 5%;
      }
      .box-in-progress .box-title {
        font-size: 24px;
        margin-bottom: 15px;
      }
      .box-item-contact {
        background-color: #0e2344;
        color: white;
        padding: 10%;
        padding-top: 2.5%;
      }
      .box-item-contact a {
        cursor: pointer;
        text-decoration: none;
        color: white;
      }
      .flex-title {
        height: auto;
        min-height: 40px;
        display: -webkit-flex;
        display: flex;
        align-items: center;
      }
      .flex-title .title-text {
        flex: 1;
      }
      .title-text.end {
        display: flex;
        -webkit-justify-content: flex-end;
        justify-content: flex-end;
      }
      .text-left {
        text-align: left;
      }
      .text-right {
        text-align: right;
      }
      .item-contact-progress {
        padding: 10px 0;
        font-size: 14px;
      }
      .item-contact-progress .icon {
        margin-right: 10px;
      }
      .icon {
        display: inline-block;
        width: 38px;
        height: 38px;
        vertical-align: middle;
        border-radius: 50%;
      }
      .icon-phone {
        background: white url('data:image/svg+xml;base64,') no-repeat center center;
        background-size: 18px;
      }
      .icon-mail {
        background: white url('data:image/svg+xml;base64,') no-repeat center center;
        background-size: 28px;
      }
      .box-btn{
        padding-top: 5%;
      }
      .box-btn.full .btn {
        width: 100%;
        border: none;
      }
      .btn-success {
        background: #83b465 !important;
        color: #ffffff;
      }
      .btn-large {
        line-height: 44px;
        height: 44px;
        text-align: center;
        padding: 0 15px;
        color: #ffffff;
        font-size: 14px;
        font-weight: bold;
      }
      .tools {
        padding: 50px;
      }
      .tools .tools-img {
        display: block;
        margin: 0 auto;
        max-width: 198px;
        width: 100%;
      }
      .page-wrapper {
        background-color: ghostwhite;
      }
      @media (max-width: 568px) {
        .box-item-contact { padding: 2.5% }
      }

  body
    #main
      .page-wrapper
        .header-top
          .logo
            img(alt='Marathonbet' src="data:image/svg+xml;base64, #{logoBase64}")
        .tools
          img.tools-img(alt= page.title src= "data:image/#{page.iconFormat};base64, #{page.iconBase64}")
        .box-in-progress
          .box-title= page.title
          .box-text!= page.text
        .box-item-contact
          .flex-title.item-contact-progress
            .btn-open-list
              i.icon.icon-phone
            .btn-open-list.text-left!= countryLabel.local
              p!= countryLabel.other
            .title-text.end
              .text-right
                a(href='tel:#{tel.link.local}')!= tel.text.local
                br
                a(href='tel:+#{tel.link.world}')!= tel.text.world
          a.flex-title.item-contact-progress(href='mailto:#{email.link}')
            .btn-open-list
              i.icon.icon-mail
            .btn-open-list.text-left!= email.text
            .title-text.end
              .text-right!= email.link
          .box-btn.full
            button.btn.btn-success.btn-large.bold(onclick='history.back()')!= tryAgain
